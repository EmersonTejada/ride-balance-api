generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Ride {
  id        String   @id @default(uuid())
  amount    Float
  platform  String
  date      DateTime @default(now())
}